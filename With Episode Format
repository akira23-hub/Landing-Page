        <div class="episode-nav">
            <button class="nav-btn" id="prevEpisodeBtn" disabled>
                <i class="fas fa-chevron-left"></i> Previous Episode
            </button>
            <button class="nav-btn" id="nextEpisodeBtn">
                Next Episode <i class="fas fa-chevron-right"></i>
