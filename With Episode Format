    <script>
        // ==================== CONFIGURATION ====================
        // REPLACE THESE WITH YOUR 5 ACTUAL MONETAG AD LINKS
        const monetagAdLinks = [
            "https://otieu.com/4/8251888",
            "https://otieu.com/4/7512585", 
            "https://otieu.com/4/8257954",
            "https://otieu.com/4/1415254",
            "https://otieu.com/4/7512545"
        ];
        
        // Your final safefile.cc download pages for each episode
        // REPLACE THESE WITH ACTUAL LINKS FOR EACH EPISODE
        const episodeDownloadPages = [
            "https://safefile.cc/Container/W6NRWDOQ1M.html",  // Episode 1
            "https://safefile.cc/Container/W6NRWDOQ2M.html",  // Episode 2
            "https://safefile.cc/Container/W6NRWDOQ3M.html",  // Episode 3
            "https://safefile.cc/Container/W6NRWDOQ4M.html",  // Episode 4
            "https://safefile.cc/Container/W6NRWDOQ5M.html"   // Episode 5
        ];
        
        // Episode data - you can customize this
        const episodeData = [
            { 
                name: "Episode 1: The Beginning", 
                size: "1.2 GB", 
                quality: "1080p HD", 
                format: "MP4",
                description: "The story begins with an unexpected discovery."
            },
            { 
                name: "Episode 2: Rising Conflict", 
                size: "1.4 GB", 
                quality: "1080p HD", 
                format: "MP4",
                description: "Tensions rise as the mystery deepens."
            },
            { 
                name: "Episode 3: Climax", 
                size: "1.5 GB", 
                quality: "1080p HD", 
                format: "MP4",
                description: "The story reaches its peak intensity."
            },
            { 
                name: "Episode 4: Falling Action", 
                size: "1.3 GB", 
                quality: "1080p HD", 
                format: "MP4",
                description: "Consequences unfold from previous events."
            },
            { 
                name: "Episode 5: Resolution", 
                size: "1.6 GB", 
                quality: "1080p HD", 
                format: "MP4",
                description: "The final chapter brings closure to the story."
            }
        ];
        
        // ==================== INITIAL SETUP ====================
        // Get movie name from URL
        const urlParams = new URLSearchParams(window.location.search);
        const movieName = urlParams.get('movie') || "Halimuyak";
        let currentEpisode = 0; // Start with episode 1 (index 0)
        
        // DOM elements
        const countdownElement = document.getElementById('countdown');
        const progressFill = document.getElementById('progressFill');
        const downloadSection = document.getElementById('downloadSection');
        const loadingSection = document.getElementById('loadingSection');
        const downloadBtn = document.getElementById('downloadBtn');
        const movieInfoElement = document.getElementById('movieInfo');
        const popupWarning = document.getElementById('popupWarning');
        const episodeButtonsContainer = document.getElementById('episodeButtons');
        const prevEpisodeBtn = document.getElementById('prevEpisodeBtn');
        const nextEpisodeBtn = document.getElementById('nextEpisodeBtn');
        const currentEpisodeDisplay = document.getElementById('currentEpisodeDisplay');
        const episodeNameElement = document.getElementById('episodeName');
        const downloadEpisodeNameElement = document.getElementById('downloadEpisodeName');
        
        // ==================== EPISODE MANAGEMENT ====================
        // Create episode buttons
        function createEpisodeButtons() {
            episodeButtonsContainer.innerHTML = '';
            
            for (let i = 0; i < episodeData.length; i++) {
                const button = document.createElement('button');
                button.className = 'episode-btn';
                button.textContent = i + 1;
                button.dataset.episode = i;
                
                if (i === currentEpisode) {
                    button.classList.add('active');
                }
                
                button.addEventListener('click', () => {
                    selectEpisode(i);
                });
                
                episodeButtonsContainer.appendChild(button);
            }
        }
        
        // Select a specific episode
        function selectEpisode(episodeIndex) {
            if (episodeIndex < 0 || episodeIndex >= episodeData.length) return;
            
            currentEpisode = episodeIndex;
            
            // Update active button
            const buttons = document.querySelectorAll('.episode-btn');
            buttons.forEach((btn, index) => {
                if (index === currentEpisode) {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });
            
            // Update episode info display
            updateEpisodeInfo();
            
            // Update navigation buttons
            updateNavigationButtons();
            
            // Reset timer if it's already finished
            resetTimer();
            
            console.log(`Selected episode: ${currentEpisode + 1} - ${episodeData[currentEpisode].name}`);
        }
        
        // Update episode information display
        function updateEpisodeInfo() {
            const episode = episodeData[currentEpisode];
            
            currentEpisodeDisplay.textContent = `Episode ${currentEpisode + 1}`;
            episodeNameElement.textContent = `Episode ${currentEpisode + 1}`;
            downloadEpisodeNameElement.textContent = `Episode ${currentEpisode + 1}`;
            
            movieInfoElement.innerHTML = `
                <h3 style="margin-top: 0; color: #333;"><i class="fas fa-film"></i> ${movieName} - ${episode.name}</h3>
                <div class="movie-detail">
                    <span><i class="fas fa-hdd"></i> File Size:</span>
                    <span>${episode.size}</span>
                </div>
                <div class="movie-detail">
                    <span><i class="fas fa-video"></i> Quality:</span>
                    <span>${episode.quality}</span>
                </div>
                <div class="movie-detail">
                    <span><i class="fas fa-file"></i> Format:</span>
                    <span>${episode.format}</span>
                </div>
                <div class="movie-detail">
                    <span><i class="fas fa-info-circle"></i> Description:</span>
                    <span>${episode.description}</span>
                </div>
            `;
        }
        
        // Update navigation buttons state
        function updateNavigationButtons() {
            prevEpisodeBtn.disabled = currentEpisode === 0;
            nextEpisodeBtn.disabled = currentEpisode === episodeData.length - 1;
        }
        
        // Navigate to previous episode
        prevEpisodeBtn.addEventListener('click', () => {
            if (currentEpisode > 0) {
                selectEpisode(currentEpisode - 1);
            }
        });
        
        // Navigate to next episode
        nextEpisodeBtn.addEventListener('click', () => {
            if (currentEpisode < episodeData.length - 1) {
                selectEpisode(currentEpisode + 1);
            }
        });
        
        // ==================== AD ROTATION FUNCTION ====================
        function getRandomAdLink() {
            const randomIndex = Math.floor(Math.random() * monetagAdLinks.length);
            return monetagAdLinks[randomIndex];
        }
        
        // ==================== MAIN DOWNLOAD FUNCTION ====================
        // THIS IS THE CRITICAL FUNCTION THAT HANDLES THE REDIRECT
        function startDownloadProcess() {
            console.log(`Download button clicked for episode ${currentEpisode + 1}!`);
            
            // Get the download page for the current episode
            const downloadPage = episodeDownloadPages[currentEpisode];
            console.log(`Selected download page: ${downloadPage}`);
            
            // Get a random ad link
            const adUrl = getRandomAdLink();
            console.log("Selected ad URL:", adUrl);
            
            // Try to open the ad in a new tab
            const newTab = window.open(adUrl, '_blank');
            
            // Check if the pop-up was blocked
            if (!newTab || newTab.closed || typeof newTab.closed == 'undefined') {
                console.warn("Ad pop-up was blocked by the browser!");
                popupWarning.style.display = 'block';
                
                // Optional: Ask user to allow pop-ups and try again
                setTimeout(() => {
                    if(confirm("Pop-up blocked! Please allow pop-ups for this site and click OK to try again.")) {
                        startDownloadProcess();
                    }
                }, 300);
                return; // Stop further execution
            }
            
            console.log("Ad opened successfully, now redirecting to download page...");
            
            // IMMEDIATELY redirect the current page to the episode's download page
            window.location.href = downloadPage;
        }
        
        // ==================== SETUP DOWNLOAD BUTTON ====================
        downloadBtn.addEventListener('click', startDownloadProcess);
        
        // ==================== TIMER MANAGEMENT ====================
        let countdown = 5;
        let countdownInterval;
        
        function startTimer() {
            clearInterval(countdownInterval);
            
            countdown = 5;
            countdownElement.textContent = countdown;
            progressFill.style.width = '0%';
            
            // Hide download section, show loading
            downloadSection.style.display = 'none';
            loadingSection.style.display = 'flex';
            
            countdownInterval = setInterval(() => {
                countdown--;
                countdownElement.textContent = countdown;
                
                // Update progress bar
                const progress = 100 - (countdown * 20);
                progressFill.style.width = `${progress}%`;
                
                if (countdown <= 0) {
                    clearInterval(countdownInterval);
                    
                    // Show download section
                    loadingSection.style.display = 'none';
                    downloadSection.style.display = 'block';
                    
                    // Update page title
                    document.title = `Download ${movieName} - Episode ${currentEpisode + 1}`;
                    
                    console.log(`Timer finished for episode ${currentEpisode + 1}. Download button is now active.`);
                }
            }, 1000);
        }
        
        function resetTimer() {
            // If timer was already finished, restart it
            if (countdown <= 0) {
                startTimer();
            }
        }
        
        // ==================== INITIALIZE PAGE ====================
        function initializePage() {
            // Create episode buttons
            createEpisodeButtons();
            
            // Set initial episode info
            updateEpisodeInfo();
            
            // Set up navigation buttons
            updateNavigationButtons();
            
            // Start the timer
            startTimer();
            
            // Browser console messages
            console.log("=== Movie Series Download Page Loaded ===");
            console.log("Movie:", movieName);
            console.log("Number of episodes:", episodeData.length);
            console.log("Current episode:", currentEpisode + 1);
            console.log("Episode download pages:", episodeDownloadPages);
            console.log("Number of ad links:", monetagAdLinks.length);
            console.log("To test: 1) Select episode, 2) Wait for timer, 3) Click download button");
        }
        
        // Initialize the page when loaded
        window.addEventListener('DOMContentLoaded', initializePage);
        
        // Simple ad-block detection (optional)
        setTimeout(() => {
            const ad = document.createElement('div');
            ad.className = 'ads ad-placement';
            ad.style.height = '1px';
            ad.style.width = '1px';
            ad.style.position = 'absolute';
            ad.style.left = '-100px';
            document.body.appendChild(ad);
            
            setTimeout(() => {
                if (ad.offsetHeight === 0) {
                    console.log("Note: Ad-blocker may be active");
                }
                document.body.removeChild(ad);
            }, 100);
        }, 2000);
    </script>
</body>
